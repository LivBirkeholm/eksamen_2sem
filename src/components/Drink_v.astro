---
const {data, img, hoverImg} = Astro.props;
console.log(data);
---

<article>
    <div class="image-container">
        <img src={img} alt="" class="default-img">
        <img src={hoverImg} alt="" class="hover-img">
        <div class="drinks_info">
            <h2>{data.name}</h2>
            <h3>{data.ingredients}</h3>
        </div>
    </div>
</article>

<style>
.drinks_info {
    padding-top: 20px;
}

h2 {
    font-size: 35px;
    margin: 0;
    color: var(--secondary-color);
}

article {
    margin: 40px;
}

.image-container {
    position: relative;
}

.default-img,
.hover-img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    transition: opacity 0.5s ease;
}

.default-img {
    opacity: 1;
}

.hover-img {
    opacity: 0;
}

.image-container:hover .default-img {
    opacity: 0;
}

.image-container:hover .hover-img {
    opacity: 1;
}

</style>
