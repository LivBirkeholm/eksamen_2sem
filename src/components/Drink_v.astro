const {data, img, hoverImg} = Astro.props;
console.log(data);
console.log(img);
console.log(hoverImg);
---

<article>
    <div class="center">
    <div class="image-container">
        <h3>{data.ingredients}</h3>
        <img src={"/"+img} alt="default image" width="500" height="500" class="default-img">
        <img src={"/"+hoverImg} alt="hover image" width="500" height="500" class="hover-img">
    </div>
    <div class="drinks_info">
        <h2>{data.name}</h2>
    </div>
</div>
</article>

<style>
.center {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
}

article img {
    align-items: center;
    margin-top: 30px;
}

    .image-container {
        position: relative;
        width: 350px;
        height: 350px;
    }
    
    .default-img, .hover-img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        transition: opacity 0.3s ease;
        object-fit: cover;
        z-index: 1;
    
    }
    
    .hover-img {
        opacity: 0;
    }
    
    .image-container:hover .default-img {
        opacity: 0;
    }
    
    .image-container:hover .hover-img {
        opacity: 1;
    }
    
    .image-container h3 {
        position: relative;
        z-index: 2; 
        text-align: center;
        padding-top: 40%;
        font-size: 30px;
        opacity: 0;  
        transition: opacity 0.3s ease;
    }
    
    .image-container:hover h3 {
        opacity: 1;
    }
    
    .drinks_info {
    padding-top: 20px;
    }
    
    h2 {
        font-size: 35px;
        margin: 0;
        color: var(--secondary-color);
        margin-bottom: 30px;
        margin-top: 30px;
    }
    
    article {
        margin: 20px;
    }
    </style>

