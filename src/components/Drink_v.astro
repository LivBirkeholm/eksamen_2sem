---
const {data, img, hoverImg} = Astro.props;
console.log(data);
---

<article>
    <div class="image-container">
        <img src={img} alt="default image" class="default-img">
        <img src={hoverImg} alt="" class="hover-img">
        <div class="drinks_info">
            <h2>{data.name}</h2>
            <h3>{data.ingredients}</h3>
        </div>
    </div>
</article>

<style>
.drinks_info {
    padding-top: 20px;
}

h2 {
    font-size: 35px;
    margin: 0;
    color: var(--secondary-color);
}

article {
    margin: 40px;
}

</style>
